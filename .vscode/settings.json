{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
    "[django-html]": {
    "editor.defaultFormatter": "monosans.djlint"
  },
  "python.analysis.autoImportCompletions": true,
  "python.autoComplete.extraPaths": ["${workspaceFolder}/django/.venv/", "${workspaceFolder}/django"],
  "python.analysis.include": ["${workspaceFolder}/django"],
  "python.analysis.indexing": true,
  "python.analysis.typeCheckingMode": "off",
  "python.autoComplete.extraPaths": ["${workspaceFolder}/django"],
  "python.defaultInterpreterPath": "${workspaceFolder}/django/.venv/bin/python",
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.testing.cwd": "${workspaceFolder}/django",
  "python.testing.pytestEnabled": false,
  "python.testing.unittestArgs": ["--noinput"],
  "python.testing.unittestEnabled": true,
  "ruff.args": ["--line-length", "120", "--config=${workspaceFolder}/django/pyproject.toml"],
  "eslint.workingDirectories": ["./react"],
  "cssVariables.lookupFiles": [
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    "**/*.less",
    "node_modules/@mantine/core/styles.css"
  ]
}
